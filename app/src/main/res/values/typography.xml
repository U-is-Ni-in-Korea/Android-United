    <style name="Title2">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="Subtitle">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingExtra">12dp</item>
