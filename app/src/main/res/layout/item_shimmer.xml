<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_sfl_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tv_sfl_item_date"
        style="@style/sfl"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_sfl_line" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_sfl_item"
        style="@style/sfl"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_sfl_item_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_sfl_item_date" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tv_sfl_item_game_title"
        style="@style/sfl"
        android:layout_width="70dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toEndOf="@+id/iv_sfl_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_sfl_item_date" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tv_sfl_result"
        style="@style/sfl"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_sfl_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_sfl_item_game_title" />

</androidx.constraintlayout.widget.ConstraintLayout>