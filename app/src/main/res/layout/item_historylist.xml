<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/history_item_date"
            style="@style/Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/history_item_date"
            android:textColor="@color/Gray_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/history_item_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/history_item_date"
            app:layout_constraintTop_toBottomOf="@+id/history_item_date" />

        <TextView
            android:id="@+id/history_item_game_title"
            style="@style/Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/history_item_game_title"
            android:textColor="@color/Gray_600"
            app:layout_constraintStart_toEndOf="@+id/history_item_image"
            app:layout_constraintTop_toBottomOf="@+id/history_item_date" />

        <TextView
            android:id="@+id/history_item_game_result"
            style="@style/Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="@string/history_item_game_result"
            android:textColor="@color/Lightblue_500"
            app:layout_constraintStart_toEndOf="@id/history_item_image"
            app:layout_constraintTop_toBottomOf="@+id/history_item_game_title" />

        <ImageView
            android:id="@+id/history_item_right_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_right_28"
            app:layout_constraintBottom_toBottomOf="@+id/history_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/history_item_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>